{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.app.json",
    "webpack": false,
    "assets": ["assets/**/*"],
    "watchAssets": true,
    "builder": "tsc",
    "typeCheck": true
  },
  "projects": {
    "backend": {
      "type": "application",
      "root": "",
      "entryFile": "main",
      "sourceRoot": "apps/backend/src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json"
      }
    }
  }
}
