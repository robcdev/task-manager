# Environment
NODE_ENV=development

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=4200

# PostgreSQL Database Configuration
# ⚠️ CHANGE THESE DEFAULT CREDENTIALS!
POSTGRES_HOST=postgres
POSTGRES_DB=task_manager
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_PORT=5432

# pgAdmin Configuration
# ⚠️ CHANGE THESE DEFAULT CREDENTIALS!
PGADMIN_EMAIL=admin@taskmanager.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Database Connection (for backend)
# ⚠️ UPDATE WITH YOUR ACTUAL DATABASE CREDENTIALS!
DATABASE_URL=postgresql://admin:admin123@postgres:5432/task_manager

# API URL (for frontend)
API_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4200