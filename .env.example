# Sample Environment Configuration for Task Manager Application. Copy this file to .env and update values as needed.
# Environment
NODE_ENV=development

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=4200

# PostgreSQL Database Configuration
POSTGRES_HOST=postgres
POSTGRES_DB=task_manager
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin123
POSTGRES_PORT=5432

# pgAdmin Configuration
PGADMIN_EMAIL=admin@taskmanager.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# Database Connection (for backend)
DATABASE_URL=postgresql://admin:admin123@postgres:5432/task_manager

# API URL (for frontend)
API_URL=http://localhost:3000
